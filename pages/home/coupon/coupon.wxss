/* pages/home/coupon/coupon.wxss */

.base-coupons {
    width: 100%;
    height: 100px;
    position: relative;
    background: radial-gradient(circle at right top, transparent 10px, #2d8cf0 0) top left / 33% 51% no-repeat,
    radial-gradient(circle at right bottom, transparent 10px, #2d8cf0 0) bottom left /33% 51% no-repeat,
    radial-gradient(circle at left top, transparent 10px, #2d8cf0 0) top right /66% 51% no-repeat,
    radial-gradient(circle at left bottom, transparent 10px, #2d8cf0 0) bottom right /66% 51% no-repeat;
    filter: drop-shadow(3px 3px 3px rgba(0, 0, 0, .3));
}

.base-coupons::before {
    content: '';
    height: 80px;
    border: 1px dashed #fff;
    position: absolute;
    left: 33%;
    top: 0;
    bottom: 0;
    margin: auto;
}

.base-coupons::after {
    content: '';
    position: absolute;
    height: 100%;
    width: 5px;
    top: 0;
    right: -4px;
    background-image: linear-gradient(to bottom, #2d8cf0 5px, transparent 5px, transparent),
    radial-gradient(10px circle at 5px 10px, transparent 5px, #2d8cf0 5px);
    background-size: 5px 15px;
}

.coupons-contont {
    margin: 10px;
}

.coupons-text-left {
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    font: bold 30px arial, sans-serif;
    color: #fff
}

.coupons-text-right {
    height: 100px;
    color: #fff
}

.elm-center {
    display: flex;
    align-items: center;
    justify-content: center;
}