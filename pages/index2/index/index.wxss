.i-card {
  margin: 0 10px;
  font-size: 14px;
  overflow: hidden;
  position: relative;
  background: #fff;
  border: 1rpx solid #dddee1;
  border-radius: 20px;
}

.i-card-full {
  margin: 0;
  border-left: none;
  border-right: none;
  border-radius: 0;
}

.i-card-header {
  display: flex;
  align-items: center;
}

.i-card-header-content {
  flex: 1;
  text-align: left;
}

.i-tags{
  text-align: center;
  height: 22px !important;
  line-height: 22px !important;
  width: 50px;
  align-items: center;
  justify-content: center;
}
.i-tags-no-width{
  width:auto !important;
}
.i-tags-circle{
  border-radius: 50px !important;
}
.i-extra{
  line-height: 40px;
}

