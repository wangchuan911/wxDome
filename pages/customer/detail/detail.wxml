<!--pages/customer/detail/detail.wxml-->
<i-panel title="客户信息">
  <i-cell-group i-class="i-group">
    <i-cell title="车辆位置">
      <view slot="footer" style="display:flex">
        <div style='word-break:break-all;width:34vh;display: block;'>{{order.addr}}</div>
        <i-icon  size="28" type="coordinates_fill" bindtap="openMapBut"/>
      </view>
    </i-cell>
    <i-cell title="车辆信息">
    <view slot="footer">
      <i-tag class="i-tags" name="card-no" color="green" type='border'>
        {{order.carNo}}
      </i-tag>
      <i-tag class="i-tags" name="card-band" color="red" type='border'>
        {{order.carType}}
      </i-tag>
      <i-tag class="i-tags" name="card-color" type='border'>
        {{order.carColor}}
      </i-tag></view>
    </i-cell>
    <i-cell title="预约时间"><view slot="footer">{{order.preDate?order.preDate:order.orderTime}}</view></i-cell>
    <i-cell title="提车时间"><view slot="footer">{{order.endTime}}</view></i-cell>
  </i-cell-group>
</i-panel>
<i-panel title="附件信息">
  <i-row i-class="i-row-css">
    <i-col wx:for="{{order.imgs}}" wx:for-index="index" wx:for-item="url" span="4">
      <image src="{{url}}" style="width: 50px; height: 50px" bindtap="preViewPicture" data-idx="{{index}}"></image>
    </i-col>
    <i-col  span="4">
      <i-icon type="add" size="50" bindtap="addPicture"/>
    </i-col>
  </i-row>
</i-panel>
<i-panel title="状态">
  <i-steps current="{{current}}">
    <i-step wx:for="{{steps}}" wx:for-index="index" wx:for-item="step">
      <view slot="title">
        {{current>index?'已完成':(current==index)?'进行中':'就绪'}}
      </view>
      <view slot="content">
        {{step.desc}}
      </view>
    </i-step>
  </i-steps>
</i-panel>
<i-button bindclick="deal">下一步</i-button>